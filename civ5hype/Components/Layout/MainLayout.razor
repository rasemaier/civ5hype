@inherits LayoutComponentBase

<div class="page-no-sidebar">
    <header class="top-bar">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <a href="/" class="logo-link">
                        <img src="/civ5.png" alt="Civilization V" class="civ5-logo" />
                    </a>
                </div>
                <div class="col-md-8 text-end">
                    <AuthorizeView>
                        <Authorized>
                            <a href="/games" class="btn btn-outline-light me-2">🎯 Spiele</a>
                            <a href="/statistics" class="btn btn-outline-light me-2">📊 Statistiken</a>
                            <a href="/fun-stats" class="btn btn-outline-light me-2">🎭 Fun Stats</a>
                            <a href="/players" class="btn btn-outline-light me-2">👥 Spieler</a>
                            <a href="/wonder-roll" class="btn btn-outline-light me-2">🎲 Wunder</a>
                            <a href="/admin/users" class="btn btn-outline-warning me-2">👑 Admin</a>
                            <a href="/Account/Manage" class="btn btn-outline-light me-2">👤 @context.User.Identity?.Name</a>
                            <form action="Account/Logout" method="post" style="display: inline;">
                                <AntiforgeryToken />
                                <button type="submit" class="btn btn-outline-danger">Logout</button>
                            </form>
                        </Authorized>
                        <NotAuthorized>
                            <a href="/Account/Login" class="btn btn-outline-light me-2">Login</a>
                            <a href="/Account/Register" class="btn btn-light">Register</a>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
    </header>

    <main>
        <article class="content-full px-4 py-4">
            @Body
        </article>
    </main>

    <footer class="text-center py-3 mt-5 bg-dark text-white">
        <p class="mb-0">🏛️ Civilization V Hype - Nur Gewinnen zählt! 🏆</p>
        <p class="mb-0"><small>Als Zweiter "mitgewinnen"</small></p>
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
