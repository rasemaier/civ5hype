@page "/"
@using civ5hype.Data.Models
@using civ5hype.Services
@inject GameService GameService
@inject PlayerService PlayerService
@rendermode InteractiveServer

<PageTitle>Civ 5 Hype</PageTitle>

<div class="text-center mb-4">
    <h1>🏛️ Civilization V Hype 🏛️</h1>
    <p class="lead">Nur Gewinnen zählt!</p>
    <p class="text-muted"><em>Als Zweiter "mitgewinnen"</em></p>
</div>

@if (playerStats != null && playerStats.Any())
{
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">🏆 Hall of Fame - Top 5</h3>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Rang</th>
                                <th>Spieler</th>
                                <th>Spiele</th>
                                <th>Siege</th>
                                <th>Siegquote</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rank = 1;
                            }
                            @foreach (var stat in playerStats.OrderByDescending(s => s.Wins).ThenBy(s => s.AverageRank).Take(5))
                            {
                                <tr>
                                    <td>
                                        @if (rank == 1)
                                        {
                                            <span style="font-size: 1.5em;">🥇</span>
                                        }
                                        else if (rank == 2)
                                        {
                                            <span style="font-size: 1.5em;">🥈</span>
                                        }
                                        else if (rank == 3)
                                        {
                                            <span style="font-size: 1.5em;">🥉</span>
                                        }
                                        else
                                        {
                                            <strong>@rank.</strong>
                                        }
                                    </td>
                                    <td><strong>@stat.PlayerName</strong></td>
                                    <td>@stat.TotalGames</td>
                                    <td><span class="badge bg-success">@stat.Wins</span></td>
                                    <td>@stat.WinRate.ToString("P0")</td>
                                </tr>
                                rank++;
                            }
                        </tbody>
                    </table>
                    <div class="text-center mt-3">
                        <a href="/statistics" class="btn btn-primary">Alle Statistiken ansehen</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (recentGames != null && recentGames.Any())
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h4 class="mb-0">📜 Letzte Spiele</h4>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var game in recentGames.Take(5))
                            {
                                var winner = game.GamePlayers.FirstOrDefault(gp => gp.IsWinner);
                                <div class="list-group-item">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            @if (!string.IsNullOrEmpty(winner?.Civilization))
                                            {
                                                <img src="/civs/@(winner.Civilization).png" 
                                                     alt="@winner.Civilization" 
                                                     title="@winner.Civilization"
                                                     style="width: 48px; height: 48px; object-fit: contain; filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.2));" 
                                                     onerror="this.style.display='none'" />
                                            }
                                            else
                                            {
                                                <div style="width: 48px; height: 48px; display: flex; align-items: center; justify-content: center; font-size: 2em;">
                                                    🏆
                                                </div>
                                            }
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex w-100 justify-content-between align-items-center">
                                                <h5 class="mb-1">
                                                    🏆 <strong>@(winner?.Player?.Name ?? "Unbekannt")</strong>
                                                    @if (!string.IsNullOrEmpty(winner?.Civilization))
                                                    {
                                                        <span class="badge bg-secondary">@winner.Civilization</span>
                                                    }
                                                </h5>
                                                <small class="text-muted">@game.PlayedOn.ToLocalTime().ToString("dd.MM.yyyy")</small>
                                            </div>
                                            <p class="mb-1">
                                                <small>Teilnehmer: @string.Join(", ", game.GamePlayers.OrderBy(gp => gp.Rank).Select(gp => gp.Player?.Name))</small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="text-center mt-3">
                            <a href="/games" class="btn btn-info text-white">Alle Spiele ansehen</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Wonder Roll Card -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">🎲 Wunder-Würfel</h4>
                </div>
                <div class="card-body text-center">
                    <p class="lead">Wer bekommt das Wunder? Lass den Würfel entscheiden!</p>
                    <p>Wähle 2-8 Spieler aus und würfle um zu sehen, wer das Wunder bekommt.</p>
                    <a href="/wonder-roll" class="btn btn-warning btn-lg">🎲 Jetzt würfeln!</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning text-center mt-4">
        <h4>Noch keine Spiele erfasst</h4>
        <p>Melde dich an und erfasse das erste Spiel!</p>
    </div>
}

